"Icon"="C:\\Users\\Lorenzo\\AppData\\Local\\Programs\\cursor\\Cursor.exe"

[HKEY_CLASSES_ROOT\*\shell\OpenWithCursor\\command]
@="\"C:\\Users\\Lorenzo\\AppData\\Local\\Programs\\cursor\\Cursor.exe\" \"%1\""

